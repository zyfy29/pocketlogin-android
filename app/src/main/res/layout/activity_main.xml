<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_captcha_v5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="[v5]弹窗式集成"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_captcha_inline_v5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="[v5]嵌入式集成"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_dan"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="[v5]抢单"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_captcha"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="弹窗式集成" />

        <Button
            android:id="@+id/btn_captcha_inline"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="嵌入式集成"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_poc"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="触发式集成"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_h5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="H5 Demo"
            android:visibility="gone" />
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:onClick="onClickConfig"
        android:text="服务配置"
        android:textColor="@android:color/holo_red_light" />


</RelativeLayout>